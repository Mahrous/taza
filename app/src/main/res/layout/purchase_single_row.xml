<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_alignTop="@id/p_l2"
        android:layout_alignBottom="@id/p_l3"
        android:id="@+id/p_l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        >


        <ImageView
            android:id="@+id/iv_image_of_item"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/qqy" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/p_l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/p_l1"
        >
        <Spinner
            android:id="@+id/spinner_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_number_of_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"/>
        <TextView
            android:id="@+id/tv_name_of_item"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/p_l3"
        android:layout_below="@id/p_l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/p_l1"
        >
        <TextView
            android:id="@+id/tv_total"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"/>
        <TextView
            android:id="@+id/tv_summary"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
